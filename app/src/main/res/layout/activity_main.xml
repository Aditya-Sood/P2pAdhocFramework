<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_b"/>

    <View
        android:id="@+id/view_b"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_a"
        app:layout_constraintBottom_toTopOf="@id/view_c"/>

    <View
        android:id="@+id/view_c"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_b"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        app:layout_constraintLeft_toLeftOf="@id/view_a"
        app:layout_constraintRight_toLeftOf="@id/btn_get_group_info"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_get_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Group Info"
        app:layout_constraintLeft_toRightOf="@id/btn_create_group"
        app:layout_constraintRight_toLeftOf="@id/btn_get_peer_info"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_get_peer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Peer Info"
        app:layout_constraintLeft_toRightOf="@id/btn_get_group_info"
        app:layout_constraintRight_toRightOf="@id/view_a"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt_txt_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter message"
        app:layout_constraintTop_toBottomOf="@id/btn_create_group"
        app:layout_constraintLeft_toLeftOf="@id/view_a"
        app:layout_constraintRight_toLeftOf="@id/btn_add_serv"
        app:layout_constraintHorizontal_weight="3"/>

    <Button
        android:id="@+id/btn_add_serv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edt_txt_message"
        app:layout_constraintRight_toRightOf="@id/view_a"
        app:layout_constraintTop_toTopOf="@id/edt_txt_message"
        app:layout_constraintBottom_toBottomOf="@id/edt_txt_message"
        app:layout_constraintHorizontal_weight="1"
        android:text="ADD SERV"/>


</androidx.constraintlayout.widget.ConstraintLayout>